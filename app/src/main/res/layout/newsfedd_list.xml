<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/newLoca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/newsDis"
        android:layout_width="239dp"
        android:layout_height="38dp"
        android:layout_marginEnd="9dp"
        android:paddingLeft="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/newsTitle" />

    <TextView
        android:id="@+id/newLoca"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_marginStart="3dp"
        android:paddingLeft="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/newTime"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/newsDis" />

    <TextView
        android:id="@+id/newTime"
        android:layout_width="114dp"
        android:layout_height="33dp"
        android:layout_marginEnd="9dp"
        android:paddingLeft="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/newLoca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newLoca"
        app:layout_constraintTop_toBottomOf="@+id/newsDis"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="241dp"
        android:layout_height="32dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="9dp"
        android:paddingLeft="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/newsDis"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="338dp"
        android:layout_height="42dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="37dp"
        android:text="View"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newLoca" />

</androidx.constraintlayout.widget.ConstraintLayout>